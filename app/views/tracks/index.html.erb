<h1>Playlist</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover">

    <thead class="table-dark">
      <tr>
        <th>Number</th>
        <th>Track</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tracks.each do |t| %>
        <tr>
          <td><%= t.order_number %></td>
          <td><%= t.title %></td>
          <td class="text-nowrap">
            <%= link_to 'show', track_path(t) %> |
            <%= link_to 'edit', edit_track_path(t) %>  |
            <td><%= button_to "destroy", track_path(t), method: :delete, data: { turbo: false }, class: "btn btn-link p-0 pb-1 m-0" %></td>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
  <p>
  <%= link_to "Add Track", new_track_path, class: 'btn btn-primary' %>
</p>
</div>


<%# track_path %>